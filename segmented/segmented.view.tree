$eve_segmented $eve_surface
	colors \low
	value? \
	options *
	option_title* \
	sub /
		<= Container $eve_flex
			colors \low
			direction \row
			sub /
				<= Plate $eve_surface
					colors \lowest
				<= Options_container $eve_flex
					sub <= Options /
						<= Option* $eve_segmented_option
							value <= option_value* \
							checked? <= option_checked* false
							label <= option_title*
							event_click?event <=> option_click*?event null
