$eve_segmented $eve_selection_single
	variant \outline
	colors \low
	sub /
		<= Container $eve_flex
			direction \row
			sub /
				<= Plate $eve_surface
					colors \low
				<= Options_container $eve_flex
					sub <= Options /
						<= Option* $eve_segmented_option
							value <= option_value* \
							checked? <= option_selected* false
							label <= option_label*
							event_click?event <=> option_click*?event null
